# Use index.php as default so asset base path is correct (works in subdirectories e.g. InfinityFree)
DirectoryIndex index.php

# Clean URLs: /thehub7 -> menu.php?slug=thehub7 (skip if file or directory exists)
<IfModule mod_rewrite.c>
	RewriteEngine On
	RewriteBase /
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteRule ^(.+)$ menu.php?slug=$1 [L,QSA]
</IfModule>
